  <script>
    const map = L.map('map').setView([44.6488, -63.5752], 12);
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', { maxZoom: 19, attribution: '© OpenStreetMap' }).addTo(map);
    const spots = [
      ["Halifax Waterfront", 44.6435, -63.5830],
      ["Citadel Hill", 44.6488, -63.5723],
      ["Maritime Museum", 44.6428, -63.5804],
      ["Public Gardens", 44.6465, -63.5760],
      ["Point Pleasant Park", 44.6314, -63.5838],
      ["Shuck Seafood", 44.6475, -63.5765]  // Food highlight
    ];
    spots.forEach(([name, lat, lon]) => {
      L.marker([lat, lon]).addTo(map).bindPopup(`<b>${name}</b>`);
    });
  </script>

